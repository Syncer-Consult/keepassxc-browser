{
    "extends": ["airbnb-base", "jquery" ],
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "webextensions": true
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "arrow-spacing": "warn",
        "array-bracket-spacing": "warn",
        "block-scoped-var": "off",
        "brace-style": ["warn", "1tbs"],
        "camelcase": "warn",
        "computed-property-spacing": ["error", "never"],
	"consistent-return": "off",
        "dot-notation": "off",
        "eqeqeq": "error",
        "func-names": "off",
	"guard-for-in": "off",
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "lines-around-comment": "off",
        "max-len": "off",
        "no-alert": "error",
        "no-bitwise": "off",
        "no-console": "off",
	"no-continue": "off",
	"no-else-return": "off",
	"no-lonely-if": "off",
        "no-loop-func": "off",
	"no-mixed-operators": "off",
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
        "no-multi-spaces": "warn",
	"no-param-reassign": "off",
        "no-plusplus": "off",
        "no-prototype-builtins": "off",
        "no-restricted-globals": "off",
        "no-restricted-syntax": "off",
	"no-return-await": "off",
        "no-tabs": "warn",
        "no-use-before-define": "off",
        "no-useless-escape": "off",
	"no-useless-return": "off",
        "no-var": "off",
        "no-underscore-dangle": "off",
        "no-unused-vars": "warn",
        "object-curly-spacing": ["warn", "always"],
        "object-shorthand": "off",
        "quote-props": "off",
        "quotes": ["error", "single"],
        "prefer-arrow-callback": "off",
        "prefer-destructuring": "off",
        "prefer-template": "off",
        "semi": ["error", "always"],
        "space-before-blocks": "warn",
        "space-in-parens": ["error", "never"],
	"spaced-comment": "off",
        "strict": "off",
        "vars-on-top": "off"
    },
    "globals": {
        "browser": true,
        "browserAction": true,
        "httpAuth": true,
        "isFirefox": true,
        "IGNORE_NORMAL": true,
        "jQuery": true,
        "keepass": true,
	"kpxc": true,
	"kpxcAutocomplete": true,
	"kpxcDefine": true,
	"kpxcFields": true,
        "kpxcEvent": true,
	"kpxcPassword": true,
	"kpxcUI": true,
        "nacl": true,
        "page": true,
        "showNotification": true,
        "tr": true
    }
}
